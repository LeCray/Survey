<div class="container" style="height: 500px">
	<div style="margin-top: 120px; margin-bottom: -50px">
		<% flash.each do |key, value| %>
			<div style="text-align: center; " class="alert alert-<%= key %>">
				<%= value %>
			</div>
		<% end %>
	</div>	



	<div id="change" class="row" style="margin-top: 200px; margin-bottom: 100px; z-index: 0">
		<div class="col-xs-12 col-lg-6 col-lg-offset-2" >
			<h5 style="color: grey"> NEW USER </h5>
			<hr style="margin-bottom: 30px">

				<%= bootstrap_form_for(@user) do |f| %>

				<%= f.select :title, options_for_select(User::TITLES), {}, class: "form-control" %>
				<%= f.text_field :first_name, label: 'First Name'%> 
				<%= f.text_field :last_name, label: 'Last Name' %> 
				<%= f.text_field :email, label: 'Email Address' %> 
				<%= f.text_field :organisation, label: 'Organisation'%> 
				<%= f.text_field :position, label: 'Position'%> 
				<%= f.select :description, options_for_select(User::DESCRIPTIONS), {}, class: "form-control" %> 
				<%= f.telephone_field :mobile, label: 'Mobile Number', placeholder: "Optional"%> 
				<%= f.telephone_field :telephone, label: 'Telephone Number', placeholder: "Optional"%> 
				<%= f.text_field :home_province, label: 'Home Province'%> 
				<%= f.text_field :current_campus, label: 'Current Campus'%> 
				<%= f.text_field :future_campus, label: 'Future Campus'%> <br>

				<%= f.password_field :password, label: 'Password' %> 
				<%= f.password_field :password_confirmation, label: 'Confirm Password' %> <br>


				<div style="margin-top: 15px">
					<%= f.submit "Create Account", class: 'btn btn-outline' %><br>
					<%= link_to root_path, class: 'btn btn-outline-warning' do %>
	              		Cancel
	            	<% end %>
				</div>

				<% end %>
				
				
	
		</div>
	</div>
</div>


<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script src="https://cdn.rawgit.com/HubSpot/tether/v1.3.4/dist/js/tether.min.js"></script>
