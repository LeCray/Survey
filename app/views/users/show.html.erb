<div class="row change" style="margin-top: 150px; margin-bottom: 50px" >
	<div class="col-xs-12 col-lg-6 col-lg-offset-2">
		<% if !flash[:notice].blank? %>
			<div class="incorrect">
			   <div class = "alert alert-success" style="border-radius: 2px">
			      <%= flash[:notice] %>
			   </div>
			</div>
		<% end %>
	</div>
</div>

<div class="container">
	<!-- Survey Status -->
	<div class="row">
		<div class="col-lg-2 col-offset-1">
			<h2>
				<%= @user.title %> <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %>
			</h2>
		</div>
		<div class="col-lg-4 col-offset-1">
			<h4> Overall Status </h4>
			<p style="font-style: italic;"> 
				Status 
			</p>
		</div>
	</div>

	<!-- Criteria -->
	<div class="row" style="margin-top: 50px">

		<!-- On Campus -->
		<div class="col-lg-4 col-lg-offset-2">
			<button id="on-campus-btn" class="btn btn-block btn-outline" style="text-align: center;"> 
				On Campus 
			</button>
			<div id="on-campus-sub-cats" style="display: none; padding: 20px; border-bottom: 1px solid grey">
				<h5> Residence Halls </h5>
				<hr>
				<h5> Multiple Bedroom Houses </h5>
			</div>
		</div>

		<!-- Off Campus -->
		<div class="col-lg-4">
			<button id="off-campus-btn" class="btn btn-block btn-outline" style="text-align: center;"> 
				Off Campus 
			</button>
			<div id="off-campus-sub-cats" style="display: none; padding: 20px; border-bottom: 1px solid grey">
				<h5> Individual-Bedroom Houses </h5>
				<hr>
				<h5> Multiple-Bedroom Houses </h5>
				<hr>
				<h5> Residence Halls </h5>
				<hr>
				<h5> Apartments </h5>
			</div>
		</div>		

	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
	
		$('#on-campus-btn').click(function(){
	    	$('#on-campus-sub-cats').slideToggle('slow');
		});

		$("#off-campus-btn").click(function(){
		    $("#off-campus-sub-cats").slideToggle('slow');
		});

	});
</script>